                                }
                                @if ()

                                {
                                    <form id="form_delete_@VehicleTable.Id" asp-area="Catalog" asp-controller="Vendors" method="post" asp-action="OnPostDelete" asp-route-id="@VehicleTable.Id" onsubmit="return jQueryModalDelete(this)">
                                        <a href="javascript:$('#form_delete_@VehicleTable.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i>  Delete</a>
                                    </form>
                                }*@
